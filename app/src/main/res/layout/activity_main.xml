<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/part1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/part1"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/part2"
        app:layout_constraintEnd_toEndOf="@id/part2"
        app:layout_constraintStart_toStartOf="@+id/part2"
        />
    <TextView
        android:id="@+id/part2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/part2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/part3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Access"
        android:layout_marginTop="30dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/buttonshape"
        app:layout_constraintTop_toBottomOf="@id/part2"
        app:layout_constraintEnd_toEndOf="@id/part2"
        app:layout_constraintStart_toStartOf="@+id/part2" />

</androidx.constraintlayout.widget.ConstraintLayout>